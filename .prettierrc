{
    "tabWidth": 4,
    "semi": true,
    "singleQuote": true,
    "plugins": [
        "prettier-plugin-astro",
        "prettier-plugin-svelte",
        "prettier-plugin-tailwindcss",
        "prettier-plugin-organize-imports"
    ],
    "overrides": [
        {
            "files": "*.astro",
            "options": {
                "parser": "astro"
            }
        },
        {
            "files": "*.svelte",
            "options": {
                "parser": "svelte"
            }
        },
        {
            "files": "*.vue",
            "options": {
                "parser": "vue"
            }
        }
    ]
}
